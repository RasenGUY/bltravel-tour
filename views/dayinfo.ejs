
<% include partials/header %>


  <section class="ftco-section ftco-degree-bg">
    <div class="container">
      <div class="row">
        <div class="col-md ftco-animate">

          <form class="some-form" action="/admin/tours/<%= tour._id %>/dayinfo?_method=PUT" method="POST">

            <!-- tour info -->
            <header><h3 class="text-center">Add the information related to each day</h3></header>
            <br>

          <% for(var i = 1; i <= tour.duration; i++){ %>
           <div class="row">
             <label for="day" class="col-md-1"><h4>Day</h4></label>
             <div class="col-md-11">
               <input id="#day" type="number" name="dayInfo<%= i %>[day]" value="<%= i %>" class="form-control-plaintext" readonly >
             </div>
           </div>
           <hr>
           <br>
           <div class="row">
             <div class="col-md-6">
               <input type="text" name="dayInfo<%= i %>[route]" value="" placeholder="route of day i :location-location-location" class="form-control">
             </div>
             <div class="col-md-6">
               <input type="number" name="dayInfo<%= i %>[distance]" value="" placeholder="distance in Km traveling in day<%= i %>" class="form-control">
             </div>
           </div>
           <br>
           <div class="row">
             <div class="col-md-8">
               <textarea name="dayInfo<%= i %>[description]" rows="8" cols="80" placeholder="Descritption of the day activity, what are you guys going to do on day: <%= i %>?" class="form-control"></textarea>
             </div>
             <div class="col-md-4">
               <input type="number" name="dayInfo<%= i %>[imageamount]" value="" placeholder="how many images ?" class="form-control">
             </div>
           </div>
           <br><br>
         <% } %>

            <input type="submit" name="" value="Continue" class="btn btn-success runded float-right rounded">
          </form>


        </div> <!-- .col-md-8 -->
      </div>
    </div>

  </section> <!-- .section -->

<% include partials/footer %>
