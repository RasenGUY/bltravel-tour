<% include partials/header %>


<section class="ftco-section ftco-degree-bg">
  <div class="container">
    <div class="row">
      <div class="col-md ftco-animate">

        <form  action="/admin/tours/<%= tour._id %>/edit?_method=PUT" method="POST">
          <header class="text-center"><h3>Fill in the general information of the tour in the form below </h3></header>
          <br>


          <div class="row">
            <div class="col-md-4">
              <input type="text" name="tour[date]" value="<%= tour.date %>" class="form-control checkin_date">
            </div>
            <div class="col-md-8">
              <input type="text" name="tour[title]" value="<%= tour.title %>" class="form-control">
            </div>
          </div>
          <br>
          <input type="text" name="tour[thumbnail]" value="<%= tour.thumbnail %>" class="form-control">
          <br>
          <div class="row">
            <div class="col-md-6">
              <input type="text" name="tour[categories]" value="<%= tour.categories %>" class="form-control">
            </div>
            <div class="col-md-6">
              <input type="text" name="tour[locations]" value="<%= tour.locations %>" class="form-control">
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-6">
              <textarea name="tour[generalDescription]" class="form-control" rows="10"><%= tour.generalDescription %></textarea>
            </div>
            <div class="col-md-6">
              <input type="number" name="tour[duration]" value="<%= tour.duration %>" class="form-control">
            </div>
          </div>
          <br>

          <input type="submit" name="submit-button" value="Update & Coninue" class="btn btn-success float-right rounded">

        </form>

      </div> <!-- .col-md-8 -->
    </div>
  </div>

</section> <!-- .section -->


<% include partials/footer %>
