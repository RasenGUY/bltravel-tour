<!-- END nav -->

<!-- hero -->
<div class="hero-wrap js-fullheight" style="background-image: url('/static/images/bg_1.jpg');">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
      <div class="col-md-9 text-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
        <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="index">Home</a></span> <span>Places</span></p>
        <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Tour Packages</h1>
        <p data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Take a look at all of the tour packages we have to offer</p>
      </div>
    </div>
  </div>
</div>

<section class="ftco-section">
  <div class="container">
    <!-- tour packages -->
    <div class="row">

      <% query.forEach( (tour) => { %>
        <div class="col-sm col-md-6 col-lg-4 ftco-animate">
          <div class="destination">
            <a href="/tours/<%= tour._id %>" class="img img-2 d-flex justify-content-center align-items-center rounded" style="background-image: url('<%= tour.thumbnail %>');">
              <div class="icon d-flex justify-content-center align-items-center">
                <span class="icon-link"></span>
              </div>
            </a>
            <div class="text p-3">
              <div class="d-flex">
                <div class="one">
                  <h3><a href="/tours/<%= tour._id %>"><b><%= tour.title %></b></a></h3>
                </div>
              </div>
              <% var len = 75; %>
              <% var truncatedDes = tour.generalDescription.substring(0,len) + "...";%>
              <p class="transformText" ><%= truncatedDes %> </p>
              <% var duration = 0 %>
              <% tour.dayInfo.forEach( () => { duration += 1 } )%>
              <p class="days"><span><%= duration %> days <%= duration + 1 %> nights</span></p>
              <% var categories = "" %>
              <% tour.categories.forEach( (cat) => { categories += cat + " " } ) %>
              <p class="days"><span><%= categories %></span></p>
              <hr>
              <p class="bottom-area d-flex">
              <% var locations = ""; %>
              <% tour.locations.forEach ((location ) => { locations += location + " "}) %>
                <span><i class="icon-map-o"></i> <%= locations %></span>
                <span class="ml-auto"><a href="/tours/<%= tour._id %>">Discover</a></span>
              </p>
            </div>
          </div>
        </div>
  <%})%>
    </div>
  </div>
</section> <!-- .section -->




<% include partials/footer %>
